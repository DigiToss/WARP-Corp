<!-- *** DAMAGE DETECTION TEST *** -->
<!-- -->	
	
    <EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
      <Id>
          <TypeId>Inventory</TypeId>
          <SubtypeId>DamageTest-Behavior</SubtypeId>
      </Id>
      <Description>
	  
		[RivalAI Behavior]
		[BehaviorName:Passive]
		
		[Triggers:DamageTest-Counter-Trigger]
		[Triggers:DamageTest-Spawn-Trigger]


      </Description>
	</EntityComponent>	

		<EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
		  <Id>
			  <TypeId>Inventory</TypeId>
			  <SubtypeId>DamageTest-Counter-Trigger</SubtypeId>
		  </Id>
		  <Description>
		
			[RivalAI Trigger]
			
			[Type:Timer]
			[MinCooldownMs:1000]
			[MaxCooldownMs:2000]
			
			[UseTrigger:true]
			[Conditions:DamageTest-BlocksToCount-Condition]
			
			[Actions:DamageTest-Counter-Action]
			
			
		  </Description>
		</EntityComponent>
		
			<EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
			  <Id>
				  <TypeId>Inventory</TypeId>
				  <SubtypeId>DamageTest-Counter-Action</SubtypeId>
			  </Id>
			  <Description>
			
				[RivalAI Action]
		
				[IncreaseCounters:DamageCount]
				
			  </Description>
			</EntityComponent>
			
				<EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
				  <Id>
					  <TypeId>Inventory</TypeId>
					  <SubtypeId>DamageTest-BlocksToCount-Condition</SubtypeId>
				  </Id>
				  <Description>
				
					[RivalAI Condition]
					[UseConditions:true]
					[MatchAnyCondition:true]
					[UseRequiredFunctionalBlocks:true]
					[RequiredNoneFunctionalBlockNames:Battery]
					[RequiredNoneFunctionalBlockNames:Gatling Turret]
					[RequiredNoneFunctionalBlockNames:Small Cargo Container]
					
				  </Description>
				</EntityComponent>

		<EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
		  <Id>
			  <TypeId>Inventory</TypeId>
			  <SubtypeId>DamageTest-Spawn-Trigger</SubtypeId>
		  </Id>
		  <Description>
		
			[RivalAI Trigger]
			
			[Type:Timer]
			[MinCooldownMs:1000]
			[MaxCooldownMs:2000]
			[UseTrigger:true]
			[MaxActions:1]
			
			[Conditions:DamageTest-Spawn-Condition]
			
			[Actions:DamageTest-Spawn-Action]
			
		  </Description>
		</EntityComponent>
		
			<EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
			  <Id>
				  <TypeId>Inventory</TypeId>
				  <SubtypeId>DamageTest-Spawn-Action</SubtypeId>
			  </Id>
			  <Description>
			
				[RivalAI Action]
	
				[MaxActions:1]	
				[UseChatBroadcast:true]
				[ChatData:DamageTest-Success-Chat]
				
				[SpawnEncounter:true]
				[Spawner:DamageTest-Spawner]
				
			  </Description>
			</EntityComponent>
			
				<EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
				  <Id>
					  <TypeId>Inventory</TypeId>
					  <SubtypeId>DamageTest-Spawn-Condition</SubtypeId>
				  </Id>
				  <Description>
				
					[RivalAI Condition]
					
					[UseConditions:true]
					[MatchAnyCondition:true]
					
					[CustomCounters:DamageCount]
					[CustomCountersTargets:2]
					
				  </Description>
				</EntityComponent>
				
					<EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
					  <Id>
						  <TypeId>Inventory</TypeId>
						  <SubtypeId>DamageTest-Spawner</SubtypeId>
					  </Id>
					  <Description>.-

						[RivalAI Spawn]
					  
						[UseSpawn:true]
					  
						[StartsReady:true]
						[MaxSpawns:1]
					  
						[SpawnGroups:(NPC-WARP) Crow]
					  
						[UseRelativeSpawnPosition:false]
						[MinDistance:1500]
						[MaxDistance:2100]
						[MinAltitude:550]
						[MaxAltitude:1100]
						[IgnoreSafetyChecks:false]
					  
					  </Description>
					</EntityComponent>


			<EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
			<Id>
				<TypeId>Inventory</TypeId>
				<SubtypeId>DamageTest-Success-Chat</SubtypeId>
			</Id>
			<Description>

				[RivalAI Chat]
			
				[UseChat:true]
				[StartsReady:true]
				[Chance:100]
				[MaxChats:1]
      
				[Author:{AntennaName}]
				[Color:Red]
      
				[ChatMessages:The action has worked! I hope...]
				[ChatAudio:Notify1]
				[BroadcastChatType:Chat]
				
     
			</Description>
			</EntityComponent>		
			
			

  </EntityComponents>
</Definitions>		