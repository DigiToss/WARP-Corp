      </Id>
      <Description>

		[RivalAI Behavior]
		[BehaviorName:Horsefly]
	    
		[IdealPlanetAltitude:650]
		[MinimumPlanetAltitude:250]
		[StrafeSpeedCutOff:75]
	  
		[Triggers:SmallEasyAtmoDrone-TriggerDeath]
		[Triggers:SmallEasyAtmoDrone-TriggerRefuel]
		[Triggers:DroneOnSpawn-Trigger]

      </Description>
    </EntityComponent>
	
